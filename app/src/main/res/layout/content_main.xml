<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.isu.erp.eaccount.activity.A003Activity"
    tools:showIn="@layout/app_bar_main"
    android:layout_marginTop="@dimen/main_navi_height"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/a003_top_area"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/appColor"
        >
        <LinearLayout
            android:id="@+id/a003_top_area_linear1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/a003_o_gunsu1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="0"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/a003_o_gunsu2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="0"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/a003_o_gunsu3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="0"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/a003_o_gunsu4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="0"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/a003_top_area_linear2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/a003_top_area_linear1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="법인카드\n미처리"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="미상신"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="진행중"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="반송"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/a003_middle_tmp_area"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@+id/a003_top_area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/a003_middle_bg"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/a003_middle_area"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/a003_mid_area_linear1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/a003_menu1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_1"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/a003_menu2"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_2"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/a003_menu3"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_3"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/a003_mid_area_linear1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:id="@+id/a003_menu4"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_4"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/a003_menu5"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_5"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/a003_menu6"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/a003_mid_menu_6"
                android:layout_weight="1"
                />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:id="@+id/a003_bottom_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/a003_middle_tmp_area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/a003_noti_box"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        app:layout_constraintTop_toBottomOf="@id/a003_bottom_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/a003_tmp_box"
        android:layout_marginTop="25dp"
        />
</android.support.constraint.ConstraintLayout>